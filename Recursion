//Define a new function called factorial() that will compute the factorial by 
//recursive multiplication (5! = 5 x 4 x 3 x 2 x 1).

#include <stdio.h>
int factorial(int);

int main() {
    /* testing code */
    printf("1! = %i\n", factorial(1));
    printf("3! = %i\n", factorial(3));
    printf("5! = %i\n", factorial(5));
}

/* define your function here (don't forget to declare it) */
int factorial(int x){
    int result = x;
    if(x > 1){
        return result * factorial(x-1);
    }
        return result;
}
